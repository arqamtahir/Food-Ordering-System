<div class="card-body">
	<ul class="nav nav-pills nav-pills-primary mb-3" id="pills-demo-1" role="tablist">
		<li class="nav-item">
			<a class="nav-link active" id="pills-1-tab" data-toggle="pill" href="#pills-1" role="tab" aria-controls="pills-1" aria-selected="true">Addon Info</a>
		</li>

		<li class="nav-item">
			<a class="nav-link" id="pills-2-tab" data-toggle="pill" href="#pills-2" role="tab" aria-controls="pills-2" aria-selected="false">Select Menu Item</a>
		</li>
	</ul>
	
	<%= form_with(model: addon, class: "shadow p-3 mb-3 rounded form", local: true) do |f| %>
		<div class="tab-content" id="pills-tabContent-1">
			<div class="tab-pane fade show active" id="pills-1" role="tabpanel" aria-labelledby="pills-1">
				<div class="card-body">
					<%= f.hidden_field :resturant_id, value: current_employee.resturant_id %>

					<div class="form-group">
						<%= f.label :name, class: "col-2 col-form-label" %>
						<%= f.text_field :name, class: "form-control input-rounded shadow rounded", placeholder: "name of addon" %>          
					</div>

					<div class="form-group">
						<%= f.label :description , class: "col-3 col-form-label"%>
						<%= f.text_field :description ,class: "form-control input-rounded shadow rounded", placeholder: "description of addon", autocomplete: "name" %>
					</div>

					<div class="form-group">
						<%= f.label :price, class: "col-3 col-form-label"%>
						
						<div class="input-group mb-3">
							<div class="input-group-prepend">
								<span class="input-group-text">Rs</span>
							</div>

							<%= f.text_field :price , class: "form-control input-rounded shadow rounded"%>
						</div>
					</div>

					<div class="form-group">
						<%=f.label :post_status, "Addon Status" %>
						<%= f.select(:post_status, Addon.post_statuses.keys) %>
					</div>
				</div>
			</div>
			
			<div class="tab-pane fade" id="pills-2" role="tabpanel" aria-labelledby="pills-2">
				<div class="form-group">
					<%= f.label :select_menu_items , class: "col-3 col-form-labeclass "%>

					<%= f.collection_check_boxes :menu_item_ids, MenuItem.all, :id, :name ,
							{},
							{class:"custom-control custom-checkbox form-check", multiple: true} %>
				</div>

				<div class="card-footer">
					<%= f.submit class: "btn btn-danger btn-floating btn-prime " %>
				</div>
			</div>
		</div>
	<% end %>
</div>

