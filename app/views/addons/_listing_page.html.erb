<section class="page-content container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class= "row">
          <h1 class="card-header col-10 ml-2">Addons</h1>        
          
          <%= link_to new_addon_path,class:"btn btn-danger  btn-outline btn-floating btn-rounded mt-2 texthover" do %>
            <span>+ Add Addon</span>
          <% end %>
        </div>
        
        <div class="card-body ">
          <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <%# <th>Description</th> %>
                <th>Price</th>
                <th>Status</th>
                <th scope="col">Actions</th>

              </tr>
            </thead>

            <tbody>
              <% @addons.each do |addon| %>
                <tr>
                  <td><%=addon.id%></td>
                  <td><%=addon.name%></td>
                  <%# <td><%=addon.description%>
                  <td><%=addon.price%></td>
                  <td><%=addon.post_status%></td>

                   <td>
                    <%= link_to edit_addon_path(addon) do%>
                      <i class="la la-pencil-square btn btn-secondary btn-outline btn-sm btn-floating btn-rounded"></i>
                    <% end %>
                    
                    <%= link_to addon_path(addon) do%>
                      <i class="la la-eye btn btn-success btn-outline btn-sm btn-floating btn-rounded"></i>
                    <% end %>
                    
                    <%= link_to addon_path(addon), method: :delete, data: {confirm: 'Are you sure?'} do%>
                      <i class="la la-close btn btn-danger btn-outline btn-sm btn-floating btn-rounded"></i>
                    <% end %>
                  </td>
                </tr>
							<% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
