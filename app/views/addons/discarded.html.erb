<section class="page-content container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card shadow p-3 mb-3 rounded form">        
        <div class= "row">
          <div class="col-6">
            <h1 class="card-header ml-2">Discarded Addons</h1>          
          </div>
        </div>
        
        <div class="card-body ">
          <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <%# <th>Description</th> %>
                <th>Price</th>
                <th>Status</th>
                <th scope="col">Actions</th>

              </tr>
            </thead>

            <tbody>
              <% @addons.each do |addon| %>
                <tr>
                  <td><%=addon.id%></td>
                  <td><%=addon.name%></td>
                  <%# <td><%=addon.description%>
                  <td><%=addon.price%></td>
                  <td><%=addon.post_status%></td>

                   <td>
                    <%= link_to "visit", addon_path(addon),
                     class:"btn btn-success btn-outline btn-md btn-floating btn-rounded"%>
                  </td>
                </tr>
							<% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

