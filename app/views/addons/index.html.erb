<section class="page-content container-fluid">
  <div class="row">
    <div class="col-10">
      <div class="card">
        <h1 class="card-header col-6 ">Addons</h1>        

        <div class="card-body ">
          <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <%# <th>Description</th> %>
                <th>Price</th>
                <th>Status</th>
                <th scope="col">Actions</th>

              </tr>
            </thead>

            <tbody>
              <% @addons.each do |addon| %>
                <tr>
                  <td><%=addon.id%></td>
                  <td><%=addon.name%></td>
                  <%# <td><%=addon.description%>
                  <td><%=addon.price%></td>
                  <td><%=addon.post_status%></td>

                  <td>
                    <%= link_to "edit ",edit_addon_path(addon),
                    class: "btn btn-sm btn-warning"%>
                    <%= link_to " show",addon_path(addon),
                    class: "btn btn-sm btn-success"%>
                    <%= link_to "delete",addon_path(addon) ,method: :delete, data: {confirm: 'Are you sure?'},
                                          class: 'btn btn-sm btn-danger' %>
                  </td>
                </tr>
							<% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <%= link_to new_addon_path,class:"btn btn-success btn-floating btn-prime col-md-2 " do %>
      <span>+ Add Addon</span>
    <% end %>
  </div>
</section>
