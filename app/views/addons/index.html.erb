<section class="page-content container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <h5 class="card-header">Addons</h5>
        
        <div class="card-body">
          <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Status</th>
              </tr>
            </thead>

            <tbody>
              <% @addons.each do |addon| %>
                <tr>
                    <td><%=addon.id%></td>
                    <td><%=addon.name%></td>
                    <td><%=addon.description%></td>
                    <td><%=addon.price%></td>
                    <td><%=addon.post_status%></td>
                </tr>
							<% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
