<div class="row page-content container-fluid">
  <div class="col-md-6">
    <div class="card">
      <h2 class="card-header">Add new addon</h2>

      <div class="card-body">
				<%= form_with(model: @addon, class: "shadow p-3 mb-3 rounded", local: true) do |f| %>
          <div class="form-group">
	          <%= f.label :name, class: "col-2 col-form-label" %>
            <%= f.text_field :name, class: "form-control input-rounded shadow rounded", placeholder: "name of addon" %>          
					</div>

          <div class="form-group">
            <%= f.label :description , class: "col-3 col-form-label"%>
						<%= f.text_field :description ,class: "form-control input-rounded shadow rounded", placeholder: "description of addon", autocomplete: "name" %>
          </div>

          <div class="form-group">
						<%= f.label :price, class: "col-3 col-form-label"%>
						
						<div class="input-group mb-3">
							<div class="input-group-prepend">
								<span class="input-group-text">Rs</span>
							</div>

							<%= f.text_field :price , class: "form-control input-rounded shadow rounded"%>
						</div>
					</div>

					<div class="form-group">
						<%= f.label :status, class: "col-3 col-form-label"%>
						<%= f.radio_button :post_status,1 %>
						<%= f.label :post_status "availabale" %>
						<%= f.radio_button :post_status,2 %>
						<%= f.label :post_status, "not availabale" %>
					<div class="card-footer">
						<%= f.submit class: "btn btn-primary" %>
					</div>
        <% end %>
      </div>
    </div>
  </div>
</div>
