<section class="page-content container-fluid">
  <div class="row">
    <div class="col-9">
      <div class="card">
        <h5 class="card-header">Addons</h5>

        <div class="card-body">
          <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Status</th>
                <th>Action</th>
                <th>menus</th>
              </tr>
            </thead>

            <tbody>
							<tr>
								<td><%=@addon.id%></td>
								<td><%=@addon.name%></td>
								<td><%=@addon.description%></td>
								<td><%=@addon.price%></td>
								<td><%=@addon.post_status%></td>
                
                <td>
                  <%= link_to "edit ",edit_addon_path(@addon),
                    class: "btn btn-sm btn-warning"%>
                  <%= link_to "delete",addon_path(@addon) ,method: :delete, data: {confirm: 'Are you sure?'},
                    class: 'btn btn-sm btn-danger' %>
                </td>

                <% if  @addon.menu_items.any?%>
                  <td><%= render @addon.menu_items%></td>
                <% end %>
							</tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <%= link_to 'Back', addons_path, class: "btn btn-primary btn-warning" %>

  </div>
</section>
