<section class="page-content container-fluid">
  <div class= "row float-right ml-auto mb-2 mr-3">          
    <%= link_to new_deal_path,class:"btn btn-info btn-outline btn-floating btn-rounded mt-2" do %>
      <span>+ Add Deal</span>
    <% end %>

    <%= link_to discarded_deals_path	,class:"btn btn-info btn-outline btn-floating btn-rounded mt-2 ml-2" do %>
      <span> Recycle Bin</span>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col-12">
      <div class="card shadow p-3 mb-3 rounded form">        
        <div class= "row">
          <div class="col-6">
            <h1 class="card-header ml-2">Available Deals</h1>          
          </div>
          
          <%# render partial for filteration %>
          <%= render "shared/filteration"%>
        </div>
        
        <div class="card-body ">
          <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Status</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @deals.each do |deal| %>
                <tr>
                  <td><%=deal.id%></td>
                  <td><%=deal.name%></td>
                  <td><%=deal.post_status%></td>

                  <td>
                    <%= link_to edit_deal_path(deal) do%>
                      <i class="la la-pencil-square btn btn-info btn-outline btn-sm btn-floating btn-rounded"></i>
                    <% end %>
                    
                    <%= link_to deal_path(deal) do%>
                      <i class="la la-eye btn btn-success btn-outline btn-sm btn-floating btn-rounded"></i>
                    <% end %>
                    
                    <%= link_to deal_path(deal), method: :delete, data: {confirm: 'Are you sure?'} do%>
                      <i class="la la-close btn btn-danger btn-outline btn-sm btn-floating btn-rounded"></i>
                    <% end %>
                  </td>
                </tr>
							<% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
