<section class="page-content container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class= "row">
          <h1 class="card-header col-9 ml-2">Discounts</h1>        
          
          <%= link_to discounts_path, class:"btn btn-info btn-outline btn-floating btn-rounded mt-2" do %>
            <span> Back to Discounts</span>
          <% end %>
        </div>

        <div class="card-body">
          <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Discount Type</th>
                <th>Status</th>
                <th>Price Or Percentage</th>
                <th>Action</th>
              </tr>
            </thead>

            <tbody>
							<tr>
								<td><%=@discount.id%></td>
								<td><%=@discount.name%></td>
								<td><%=@discount.discount_type%></td>
								<td><%=@discount.post_status%></td>
                <td><%=@discount.discount_percentage%></td>
                
                <td>
                  <% if  @discount.discarded? %>
                    <%= link_to "Restore",  restore_discount_path(@discount),
                      class:"btn btn-info btn-outline btn-sm btn-floating btn-rounded"%>
                  <% else %>
                    <%= link_to edit_discount_path(@discount) do%>
                      <i class="la la-pencil-square btn btn-info btn-outline btn-sm btn-floating btn-rounded"></i>
                    <% end %>                    
                  <% end %>

                  <% if  @discount.discarded? %>
                    <%= link_to "Permanent delete", discount_path(@discount), class:"btn btn-danger btn-outline btn-sm btn-floating btn-rounded", method: :delete, data: {confirm: 'Are you sure to delete it permanently?'} %>
                  <% else %>
                    <%= link_to discount_path(@discount), method: :delete, data: {confirm: 'Are you sure?'} do%>
                      <i class="la la-close btn btn-danger btn-outline btn-sm btn-floating btn-rounded"></i>
                    <% end %>              
                  <% end %>
                </td>
							</tr>
            </tbody>
          </table>
        </div>
        
        <div class="card-body">
          <span>This discount is implemented on the following Food Items<br><br></span>
          <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
              </tr>
            </thead>

            <tbody>
              <% @discount.food_items.all.each do | food_item |%>
                <tr>
                  <td><%=food_item.id%></td>
                  <td><%=food_item.name%></td>
                </tr>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
