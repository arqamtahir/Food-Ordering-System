<section class="page-content container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card shadow p-3 mb-3 rounded form">
        <div class= "row">
          <h1 class="card-header col-9 ml-2">Category</h1>        
          
          <%= link_to group_items_path,class:"btn btn-info btn-outline btn-floating btn-rounded mt-2" do %>
            <span> Back to Categories</span>
          <% end %>
        </div>

        <div class="card-body">
          <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>

            <tbody>
							<tr>
								<td><%=@group_item.id%></td>
								<td><%=@group_item.name%></td>
								<td><%=@group_item.description%></td>
								<td><%=@group_item.post_status%></td>
                
                <td>
                  <%= link_to edit_group_item_path(@group_item) do%>
                    <i class="la la-pencil-square btn btn-info btn-outline btn-sm btn-floating btn-rounded"></i>
                  <% end %>

                  <%= link_to group_item_path(@group_item), method: :delete, data: {confirm: 'Are you sure?'} do%>
                    <i class="la la-close btn btn-danger btn-outline btn-sm btn-floating btn-rounded"></i>
                  <% end %>
                </td>
							</tr>
            </tbody>
          </table>
          
          <% if  @group_item.options.any?%>
            <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
              <span> Associated Options</span>
              
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Action</th>
                </tr>
              </thead>

              <tbody>
                <% @group_item.options.each do |o|%>
                  <tr>
                    <td><%=o.id%></td>
                    <td><%=o.name%></td>                  
                    
                    <td>
                      <%= link_to option_path(o), method: :delete, data: {confirm: 'Are you sure?'} do%>
                        <i class="la la-close btn btn-danger btn-outline btn-sm btn-floating btn-rounded"></i>
                      <% end %>
                    </td>     
                  </tr>
                <% end %>  
              </tbody>
            </table>
          <% end %>      
        </div>
      </div>
    </div>
  </div>
</section>
