<section class="page-content container-fluid">
  <div class= "row float-right ml-auto mb-2 mr-3">          
    <%= link_to new_menu_item_path,class:"btn btn-info btn-outline btn-floating btn-rounded mt-2" do %>
      <span>+ Add Menu Item</span>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col-12">
      <div class="card shadow p-3 mb-3 rounded form">        
        <div class= "row">
          <div class="col-6">
            <h1 class="card-header ml-2">Menu Items</h1>          
          </div>
          
          <div class= " row float-right ml-auto mt-2 mr-3">
            <div class= "">
              <%= link_to 'available', menu_items_path(status: "available") , class: "btn btn-info btn-rounded btn-floating btn-outline" %>
            </div>
            
            <div class= "">
              <%= link_to 'unavailable', menu_items_path(status: "unavailable") , class: "btn btn-info btn-rounded btn-floating btn-outline" %>
            </div>
            
            <div class= "">
              <%= link_to 'All', menu_items_path(status: "all") , class: "btn btn-info btn-rounded btn-floating btn-outline" %>
            </div>
          </div>
        </div>
        
        <div class="card-body ">
          <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>menu_itemable_id</th>
                <th>menu_itemable_type</th>
                <th>menu name</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @menu_items.each do |menu_item| %>
                <tr>
                  <td><%=menu_item.id%></td>
                  <td><%=menu_item.menu_itemable_id%></td>
                  <td><%=menu_item.menu_itemable.name%></td>
                  <td><%=menu_item.menu.name%></td>

                  <td>
                    <%= link_to edit_menu_item_path(menu_item) do%>
                      <i class="la la-pencil-square btn btn-info btn-outline btn-sm btn-floating btn-rounded"></i>
                    <% end %>
                    
                    <%= link_to menu_item_path(menu_item) do%>
                      <i class="la la-eye btn btn-success btn-outline btn-sm btn-floating btn-rounded"></i>
                    <% end %>
                    
                    <%= link_to menu_item_path(menu_item), method: :delete, data: {confirm: 'Are you sure?'} do%>
                      <i class="la la-close btn btn-danger btn-outline btn-sm btn-floating btn-rounded"></i>
                    <% end %>
                  </td>
                </tr>
							<% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
