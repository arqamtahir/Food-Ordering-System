<section class="page-content container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class= "row">
          <h1 class="card-header col-10 ml-2">Menu</h1>        
          
          <%= link_to new_menu_path,class:"btn btn-danger btn-outline btn-floating btn-rounded mt-2" do %>
            <span>+ Add Menu</span>
          <% end %>
        </div>

        <div class="card-body ">
          <table id="bs4-table" class="table table-striped table-bordered table-round" style="width:100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @menus.each do |menu| %>
                <tr>
                  <td><%=menu.id%></td>
                  <td><%=menu.name%></td>
                  
                  <td>
                    <%= link_to edit_menu_path(menu) do%>
                      <i class="la la-pencil-square btn btn-secondary btn-outline btn-sm btn-floating btn-rounded"></i>
                    <% end %>
                    
                    <%= link_to menu_path(menu) do%>
                      <i class="la la-eye btn btn-success btn-outline btn-sm btn-floating btn-rounded"></i>
                    <% end %>
                    
                    <%= link_to menu_path(menu), method: :delete, data: {confirm: 'Are you sure?'} do%>
                      <i class="la la-close btn btn-danger btn-outline btn-sm btn-floating btn-rounded"></i>
                    <% end %>
                  </td>
                </tr>
							<% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
