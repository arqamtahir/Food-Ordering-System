<section class="page-content container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class= "row">
          <h1 class="card-header col-9 ml-2">Menu</h1>        
          
          <%= link_to menus_path,class:"btn btn-secondary btn-outline btn-floating btn-rounded mt-2" do %>
            <span> < Back to Menu</span>
          <% end %>
        </div>

        <div class="card-body">
          <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Action</th>
              </tr>
            </thead>

            <tbody>
							<tr>
								<td><%=@menu.id%></td>
								<td><%=@menu.name%></td>
                
                <td>
                  <%= link_to edit_menu_path(@menu) do%>
                    <i class="la la-pencil-square btn btn-secondary btn-outline btn-sm btn-floating btn-rounded"></i>
                  <% end %>
                  
                  <%= link_to menu_path(@menu), method: :delete, data: {confirm: 'Are you sure?'} do%>
                    <i class="la la-close btn btn-danger btn-outline btn-sm btn-floating btn-rounded"></i>
                  <% end %>
                </td>
							</tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
