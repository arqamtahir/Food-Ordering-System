<section class="page-content container-fluid">
  <div class="row">
    <div class="col-10">
      <div class="card">
        <h1 class="card-header col-6 ">Menus</h1>        

        <div class="card-body ">
          <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @menus.each do |menu| %>
                <tr>
                  <td><%=menu.id%></td>
                  <td><%=menu.name%></td>
                  <td>
                    <%= link_to "edit ",edit_menu_path(menu),
                    class: "btn btn-sm btn-warning"%>
                    <%= link_to " show",menu_path(menu),
                    class: "btn btn-sm btn-success"%>
                    <%= link_to "delete",menu_path(menu) ,method: :delete, data: {confirm: 'Are you sure?'},
                                          class: 'btn btn-sm btn-danger' %>
                  </td>
                </tr>
							<% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <%= link_to new_menu_path,class:"btn btn-success btn-floating btn-prime col-md-2 " do %>
      <span>+ Add menu</span>
    <% end %>
  </div>
</section>
