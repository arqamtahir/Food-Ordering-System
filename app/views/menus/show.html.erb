<section class="page-content container-fluid">
  <div class="row">
    <div class="col-9">
      <div class="card">
        <h5 class="card-header">menus</h5>

        <div class="card-body">
          <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Action</th>
              </tr>
            </thead>

            <tbody>
							<tr>
								<td><%=@menu.id%></td>
								<td><%=@menu.name%></td>
                
                <td>
                  <%= link_to "edit ",edit_menu_path(@menu),
                    class: "btn btn-sm btn-warning"%>
                  <%= link_to "delete",menu_path(@menu) ,method: :delete, data: {confirm: 'Are you sure?'},
                    class: 'btn btn-sm btn-danger' %>
                </td>
							</tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <%= link_to 'Back', menus_path, class: "btn btn-primary btn-warning" %>
  </div>
</section>
