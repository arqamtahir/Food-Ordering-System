<%= form_with model: option_item do |f| %>
  <div class="row mt-3">
    <div class="col-4">
      <div class="input-group">
        <label for="" class="col-form-label form-control sfl" id="sfl" readonly>Enter price for <%=options.name%></label>
        <%= f.hidden_field :id, name: "food_item[option_items_attributes][id]" %>
      </div>
    </div>

    <div class="col-4">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">RS</span>
        </div>
          <%= f.text_field :price, name: "food_item[option_items_attributes][price]" %>
      </div>
    </div>
  </div>
<% end %>
